<div class="row">
    <div class="col-md-8 offset-md-2 offset-md-right-2 mt-5">
        <h1>Eat-Da-Burger!</h1>
    </div>
</div>

<div class="row">

    <div class="col-md-4">
        <h2>Burgers to Eat:</h2>
        <ul>
            {{#each burgers }}
                {{#unless devoured}}
                    <li class="m-1">{{burger_name}}&nbsp;<button type="button" class="btn btn-success devour_burger" data-id="{{id}}" data-devoured="{{devoured}}"><img class="eat_image" src="assets/img/homer_eat.png" alt="Devour the Burger" class="rounded"></button>&nbsp;<i data-id="{{id}}" class="fa fa-trash delete_burger" aria-hidden="true"></i></li>
                {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="col-md-4">
        <img src="assets/img/burger.gif" alt="Burger Gif" id="burger_image" class="rounded">
    </div>

    <div class="col-md-4">
        <h2>Burgers Devoured:</h2>
        <ul>
            {{#each burgers }}
                {{#if devoured}}
                    <li class="m-1">{{burger_name}}&nbsp;<button type="button" class="btn btn-warning devour_burger" data-id="{{id}}" data-devoured="{{devoured}}"><img class="undo_eat_image" src="assets/img/homer_sad.png" alt="Undevour the Burger" class="rounded"></button>&nbsp;<i data-id="{{id}}" class="fa fa-trash delete_burger" aria-hidden="true"></i></li>
                {{/if}}
            {{/each}}
        </ul>
    </div>

</div>


<div class="row mt-5">

    <div class="col-md-4 offset-md-4 offset-md-right-4">

        <form class="create-form">

            <div class="form-group">
                <textarea class="form-control" id="burger_name" name="burger_name" rows="3" placeholder="Add a burger to eat..."></textarea>
            </div>

            <button type="submit" class="btn btn-primary" id="submit_burger">Submit</button>

        </form>

    </div>

</div>
